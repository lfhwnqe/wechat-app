
.weui-toptips_mask {
  position: fixed;
  z-index: 1024;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  background: transparent;
}

.weui-toptips {
  position: fixed;
	z-index: 666666;
	top: 40%;
	left: 50%;
	-webkit-transform: translate(-50%, -50%);
	transform: translate(-50%, -50%);
	text-align: center;
	overflow: hidden;
  max-width: 346rpx;
  display: flex !important;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  background-color: rgba(54,52,50, .65);
  border-radius: 14rpx;
  padding: 30rpx 38rpx;
}

.weui-toptips_icon {
  height: 60rpx;
}

.weui-toptips_icon image {
  width: 60rpx;
  height: 60rpx;
}

.weui-toptips_content {
  display: flex !important;
  margin-top: 15rpx;
  font-size: 30rpx !important;
  line-height: 42rpx !important;
  color: #ffffff;
  white-space: pre-wrap !important;
  flex-wrap: wrap !important;
}