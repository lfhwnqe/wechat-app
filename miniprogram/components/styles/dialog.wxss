.weui-dialog {
  position: fixed;
	z-index: 666666;
	width: 540rpx;
	top: 50%;
	left: 50%;
	-webkit-transform: translate(-50%, -50%);
	transform: translate(-50%, -50%);
	text-align: center;
	overflow: hidden;
}

.weui-dialog__con {
  width: 540rpx;
  background: #ffffff;
  text-align: center;
  overflow: hidden;
  font-size: 0;
  line-height: 0;
  border-radius: 8rpx;
  padding-top: 28rpx;
}

/*头部*/
.weui-dialog__hd {
  width: 425rpx;
  height: 50rpx;
  margin: 0 auto 15rpx;
  font-size: 36rpx;
  line-height: 50rpx;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
  color: #34312D;
}

/*图片*/
.weui-dialog__logo {
  padding-top: 48rpx;
  display: flex;
  justify-content: center;
}

.weui-dialog__logo image {
  width: 224rpx;
  height: 224rpx;
}

/*内容部分*/

.weui-dialog__pre-bd {
  padding-top: 40rpx;
  padding-bottom: 40rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  letter-spacing: 0;
  text-align: center;
}

.weui-dialog__pre-bd-line {
  width: 466rpx;
  font-size: 30rpx;
  line-height: 42rpx;
  color: #999AA1;
  text-align: center;
}

.weui-dialog__pre-bd-dark {
  padding-top: 48rpx;
  padding-bottom: 48rpx;
}

.weui-dialog__pre-bd-dark .weui-dialog__pre-bd-line {
  color: #2F3344;
}

.weui-dialog__bd {
  padding-top: 48rpx;
  padding-bottom: 48rpx;
  width: 460rpx;
  line-height: 45rpx;
  margin: 0 auto;

  font-size: 32rpx;
  color: #2F3344;
  letter-spacing: 0;
  text-align: center;
}

/*底部按钮*/
.weui-dialog__ft {
  height: 104rpx;
  display: flex;
  align-items: center;
  border-top: 2rpx solid #E8E8E8;
}

.weui-dialog__btn {
  width: 540rpx;
  height: 104rpx;
  line-height: 104rpx;
  font-size: 32rpx;
  font-weight: 500;
  text-align: center;
}

.weui-dialog__hascancel .weui-dialog__btn {
  width: 269rpx;
  height: 104rpx;
}

.weui-dialog__btn_confirm {
  color: #4272F3;
}

.weui-dialog__btn_cancel {
  color: #C3C3C3;
  border-right: 2rpx solid #EFEDEA;
}